<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD5D6"
    tools:context=".Register">


        <TextView
            android:id="@+id/Fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="56dp"
            android:text="First Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/FnameTxt"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/edit_text_rounded_bg"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="@+id/Fname"
        app:layout_constraintTop_toTopOf="@+id/Fname" />

    <TextView
            android:id="@+id/Lname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="12dp"
            android:text="Last Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FnameTxt" />

    <EditText
        android:id="@+id/LnameTxt"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/edit_text_rounded_bg"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/FnameTxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/FnameTxt"
        app:layout_constraintTop_toTopOf="@+id/Lname" />

    <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
        android:layout_marginTop="12dp"
            android:text="Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LnameTxt" />

    <EditText
        android:id="@+id/EmailTxt"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/edit_text_rounded_bg"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/FnameTxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/FnameTxt"
        app:layout_constraintTop_toTopOf="@+id/Email" />

    <TextView
        android:id="@+id/Cemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="12dp"
        android:text="Confirm Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailTxt" />

    <EditText
        android:id="@+id/CemailTxt"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/edit_text_rounded_bg"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/FnameTxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/FnameTxt"
        app:layout_constraintTop_toTopOf="@+id/Cemail" />

    <TextView
            android:id="@+id/Pswrd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="12dp"
            android:text="Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CemailTxt" />

        <EditText
            android:id="@+id/PswrdTxt"
            android:layout_width="281dp"
            android:layout_height="48dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/edit_text_rounded_bg"
            android:padding="8dp"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/FnameTxt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/FnameTxt"
            app:layout_constraintTop_toTopOf="@+id/Pswrd" />

    <TextView
            android:id="@+id/Cpswrd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="12dp"
            android:text="Confirm Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PswrdTxt" />

    <EditText
        android:id="@+id/CpswrdTxt"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/edit_text_rounded_bg"
        android:padding="8dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/FnameTxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/FnameTxt"
        app:layout_constraintTop_toTopOf="@+id/Cpswrd" />

    <Button
        android:id="@+id/Register"
        android:layout_width="169dp"
        android:layout_height="51dp"
        android:layout_marginTop="42dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CpswrdTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>
