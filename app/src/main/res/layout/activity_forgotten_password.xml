<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD5D6"
    tools:context=".Login">

    <EditText
        android:id="@+id/EmailOrPhone_Txt"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="524dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email or phone number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="333dp"
        android:layout_height="48dp"
        android:text="Send Confirmation code"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintTop_toBottomOf="@id/EmailOrPhone_Txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />


    <TextView
        android:id="@+id/createAccountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Don't have access to any of these?"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/confirm_button"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/confirm_button"
        app:layout_constraintTop_toBottomOf="@+id/confirm_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
